{
  "name": "soundshine-bot",
  "version": "1.0.0",
  "description": "soundSHINE Bot for Discord",
  "homepage": "https://github.com/n3m01726/soundshine-bot#readme",
  "bugs": {
    "url": "https://github.com/n3m01726/soundshine-bot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n3m01726/soundshine-bot.git"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "axios": "^1.9.0",
    "better-sqlite3": "^12.1.0",
    "chalk": "^4.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "discord-rpc": "^4.0.1",
    "discord.js": "^14.0.0",
    "dotenv": "^16.0.0",
    "eslint": "^9.29.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^8.0.0",
    "node-cron": "^4.1.1",
    "prom-client": "^15.1.3",
    "winston": "^3.3.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "globals": "^16.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "vitest": "^3.2.4"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:integration": "vitest tests/integration/",
    "test:performance": "vitest tests/performance/",
    "test:stress": "vitest tests/stress/",
    "test:all": "node scripts/run-tests.js",
    "lint": "eslint . --ignore-pattern 'scripts/**/*'",
    "lint:fix": "eslint . --fix --ignore-pattern 'scripts/**/*'",
    "format": "eslint . --fix --ignore-pattern 'scripts/**/*'",
    "format:check": "eslint . --ignore-pattern 'scripts/**/*'",
    "fix:all": "npm run lint:fix",
    "check:all": "npm run lint",
    "fix:ephemeral": "node scripts/fix-ephemeral.js",
    "deploy:dev": "node scripts/deploy-commands.js --dev",
    "deploy:prod": "node scripts/deploy-commands.js --global",
    "git-actions": "node scripts/git-actions.js",
    "pre-push": "node scripts/pre-commit.js",
    "security:check": "node scripts/security-check.js",
    "prestart": "npm run security:check",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:production": "bash scripts/deploy.sh production",
    "docker:build": "docker build -t soundshine-bot .",
    "docker:run": "docker run -p 3000:3000 soundshine-bot",
    "docker:compose": "docker-compose up -d",
    "db:deploy": "node utils/database.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "glob": "^9.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "soundshine",
    "music",
    "nodejs",
    "javascript"
  ],
  "private": false,
  "files": [
    "index.js",
    "scripts/",
    "utils/",
    "tests/"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "env": {
      "node": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error",
      "eqeqeq": "error",
      "curly": "error",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "indent": [
        "error",
        2
      ],
      "node/no-unsupported-features/es-syntax": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ]
    }
  }
}
